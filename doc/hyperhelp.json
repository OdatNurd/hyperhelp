{
    // The description of what this help provides
    "description": "HyperHelp System Documenation",

    // This optional key specifies what path inside of the package hosting the
    // help file that all of the help files can be found in. If it is not set,
    // the default is to assume that all help files are stored in the same
    // package location as the help index file.
    "doc_root": "doc",

    // The table of contents; this needs to be an array of dictionaries that
    // contain "caption" and "topic" keys. Each dictionary may also optionally
    // include a "children" key that specifies sub-topics in a similar manner.
    //
    // The table of contents is displayed in the order the items are listed.
    //
    // If this key is not provided, the table of contents is a sorted list of
    // all topics available in the help file.
    "toc": [
        {
            "topic": "index.txt",
            "caption": "HyperHelp: What is it?"
        },
        {
            "topic": "conventions.txt",
            "caption": "Help File Conventions"
        },
        {
            "topic": "syntax.txt",
            "caption": "Help File Syntax",
            "children": [
                {
                    "topic": "syntax.txt",
                    "caption": "Overview"
                },
                {
                    "topic": "header",
                    "caption": "File Header"
                },
                {
                    "topic": "targets",
                    "caption": "Link Targets"
                },
                {
                    "topic": "links",
                    "caption": "Links"
                },
                {
                    "topic": "keys",
                    "caption": "Key Specifications"
                },
                {
                    "topic": "code",
                    "caption": "Code Blocks"
                },
            ]
        },
        {
            "topic": "how.txt",
            "caption": "How It Works"
        }
    ],

    // The list of known help files within this package. This is a dictionary
    // in which the keys are the names of help files (relative to the set
    // document root) with the values being an array of all of the externally
    // visible topics contained within those files.
    //
    // The topics can be:
    //    - An array of strings which are the topics in the file
    //    - The single value `true` to indicate that the file contains only
    //      a single topic that is its own name (i.e. it just has a header link)
    //    - A dictiomary containing a "caption" and "topic" key
    //
    // At load time, the boolean `true` is treated as if it was an array
    // containing just the file name. Inside an array of topics (including the
    // presumed one you get for using `true` as a value), each non-dictionary
    // list entry is interpreted as a dictionary with a "caption" and "topic"
    // key of the same value.
    "help_files": {
        "index.txt": [
            "index.txt",
            "this"
        ],

        "conventions.txt": true,

        "syntax.txt": [
            "syntax.txt",
            "header",
            "targets",
            "standard",
            "option",
            "links",
            "keys",
            "code"
        ],

        "how.txt": [
            "how.txt",
            "help.files",
            "help.index",
            "help.toc",
            "help.toc.captions",
            "help.command"
        ],
    },

    // This functions identically to "help_files" except that here the file
    // names are assumed to be files contained within a package which can be
    // opened to provide additional external file support.
    //
    // Such files should have a filename prefixed with "Packages/PackageName/".
    "package_files": {
        "Packages/Default/delete_word.py":
        [
            {
                "caption": "Default Plugin",
                "topic": "Packages/Default/delete_word.py"
            }
        ],

        "Packages/Default/exec.py":
        [
            {
                "caption": "Default Plugin",
                "topic": "Packages/Default/exec.py"
            }
        ],
    },

    // This functions identicaly to "help_files" except that here the file names
    // are assumed to be some sort of external resource which can be opened in
    // a browser.
    //
    // In all other regards it works the same as a help file, with the sole
    // exception that following the link opens the link in the default browser
    // instead of opening a help file.
    "urls": {
        "https://packagecontrol.io/packages/OverrideAudit":
        [
            {
                "caption": "Easily manage your Sublime Text package Overrides",
                "topic": "OverrideAudit"
            }
        ],

        "https://packagecontrol.io/packages/PackageResourceViewer":
        [
            {
                "caption": "Sublime Text plugin to view package resources",
                "topic": "https://packagecontrol.io/packages/PackageResourceViewer"
            }
        ]
    }
}
